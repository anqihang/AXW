<view id="GameIndex page">
    <nav-bar title="" color="white"></nav-bar>
    <view class="overflow-hidden">
       <swier>
        <swiper-item wx:for="{{swiperList}}" wx:key="id">
            <image src="https://cdn.jsdelivr.net/gh/yangyang-yangyang/yangyang-yangyang.github.io/images/game/1.png"></image>
        </swiper-item>
       </swiper>
    </view>
    <scroll-view scroll-y class="flex-1 overflow-hidden">
        <grid-view type="masonry" main-axis-gap="8" cross-axis-gap="8" cross-axis-count="4" padding="{{[12,12,12,12]}}">
            <block wx:for="{{gameList}}" wx:key="id">
                <view>
                    <image src="{{item.img}}"></image>
                    <text>{{item.name}}</text>
                </view>
            </block>
        </grid-view>
    </scroll-view>
</view>